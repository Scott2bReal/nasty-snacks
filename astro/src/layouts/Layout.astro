---
import { Nav } from "../components/navbar/Nav";
import Socials from "../components/Socials.astro";
import type { BannerImage } from "../types";
import { sanityAPI, sanityImageUrl } from "../utils/sanity";

export interface Props {
  title: string;
}

const photoResult = await sanityAPI("bandPhoto");
const photos = photoResult.result;
const photo = photos[0] as BannerImage;
const builder = sanityImageUrl(photo.image);

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name='title' content='Nasty Snacks' />
    <meta name='description' content='Website for the band Nasty Snacks from Chicago, IL' />
    <meta name='og:image' content={builder.auto('format').url()} />
    <meta name="viewport" content="width=device-width" />
    <meta charset='utf-8' />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <header class="w-[100vw] fixed top-0 z-40">
    <Nav client:idle />
  </header>
  <body class="relative">
    <slot />
  </body>
  <footer class="text-center pt-12 pb-4">
    <Socials />
    <p class="text-sm pb-4 pt-6">
      <em
        >Made with <a href="https://astro.build" target="_blank"
          ><span class="text-gradient">{Astro.generator}</span> ðŸš€</a
        >
      </em>
    </p>
  </footer>

  <style is:global>
    @import "../styles/globals.css";
  </style>
</html>
