---
import Nav from "../components/navbar/Nav";
import SEO from "../components/SEO.astro";
import Socials from "../components/Socials.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <header class="w-[100vw] fixed top-0 z-40">
    <Nav client:idle />
  </header>
  <body class="relative">
    <slot />
  </body>
  <footer class="text-center pt-12 pb-4 bg-neutral-900">
    <Socials />
    <p class="text-sm pb-4 pt-6">
      <em
        >Made with <a href="https://astro.build" target="_blank"
          ><span class="text-gradient">{Astro.generator}</span> ðŸš€</a
        >
      </em>
    </p>
  </footer>

  <style is:global>
    @import "../styles/globals.css";
  </style>
</html>
