---
import { sanityAPI, sanityImageUrl } from "../utils/sanity"
import { Image } from "astro:assets"
// import poster from "../assets/snacks-10-year-poster.webp"

const posterResult = await sanityAPI("promoPoster")
const poster = posterResult.result[0]

const builder = sanityImageUrl(poster.image)
---

<a
  target="_blank"
  rel="noopener noreferrer"
  href="https://lh-st.com/shows/01-10-2025-nasty-snacks/"
  ><Image
    loading="eager"
    class="mx-auto h-auto object-contain sm:w-[453px]"
    src={builder.auto("format").width(453).url()}
    inferSize={true}
    alt={poster.alt}
  /></a
>
