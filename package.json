{
  "name": "snacks-site",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "check": "pnpm outdated -r",
    "up-all": "pnpm up -r",
    "astro:dev": "pnpm --filter astro dev",
    "sanity:deploy": "pnpm --filter sanity sendIt",
    "sanity:dev": "pnpm --filter sanity dev",
    "format-check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,html,astro}\"",
    "format-fix": "prettier --write \"**/*.{js,jsx,ts,tsx,css,html,astro}\""
  }
}
